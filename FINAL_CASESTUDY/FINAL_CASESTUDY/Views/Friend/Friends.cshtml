@model PasteBookEntity.USER

<div class="row">
    <div class="col-sm-2">
        <div class="container-fluid">
            <div id="imageFriendContainer">
                <img src="~/Content/samplePicture/facebook-avatar.jpg" class="img-responsive" id="homeProfilePic" />
            </div>
        </div>
    </div>
    <div class="col-sm-10">
        <div class="well">
            <p id="profileName">@Model.FIRST_NAME @Model.LAST_NAME</p>
            <p>Friends: </p>
            <p><span class="glyphicon glyphicon-plus"></span> Find Friends</p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="well">
            <div class="container-fluid">
                <h4>Friends</h4>
                <hr />

                <div id="friendContainer">
                    @{ Html.RenderAction("GetFriendList", new { username = Model.USER_NAME });}
                </div>

            </div>
        </div>
    </div>
</div>


