@model PasteBookEntity.USER
<div class="col-sm-3"></div>
<div class="col-sm-6">
    <div class="form-horizontal">
        <div class="title-container">
            <p class="form-title">Login</p>
            <p>Don't have an account yet? @Html.ActionLink("Sign-up", "Register", "Account") now!</p>
        </div>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.ValidationMessage("errorMessageLogin", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Email address", htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.EMAIL_ADDRESS, new { htmlAttributes = new { @class = "form-control", id="loginEmail" } })
                    @Html.ValidationMessageFor(model => model.EMAIL_ADDRESS, "", new { @class = "text-danger", id="errorEmail" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Password", htmlAttributes: new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.PASSWORD, new { htmlAttributes = new { @class = "form-control", id="loginPassword", type = "password" } })
                    @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger",id="errorPassword" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <input type="submit" value="Login" class="btn btn-primary" onclick="ChangePasswordScript()"/>
                </div>
            </div>
        }


            

        
    </div>   
</div>
<div class="col-sm-3"></div>
@section scripts{
        @Scripts.Render("~/bundles/jqueryval")
        <script>
            function ChangePasswordScript() {
                var password = $('#loginPassword').val();

                password = password.replace(/</g, "&lt");
                password = password.replace(/>/g, "&gt");
                
                $('#loginPassword').val(password);
            }
        </script>
    }